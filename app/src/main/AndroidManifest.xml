<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.bde_eseo.lacommande" >

    <!-- Include following permission for Internet access -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Include following permission if you want to cache images on SD card -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="fr.bde_eseo.lacommande.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:theme="@style/AppTheme" >
        </activity>

        <activity
            android:name="fr.bde_eseo.lacommande.admin.ClubListActivity"
            android:label="@string/activity_admin_clubs"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme" >
        </activity>

        <activity
            android:name="fr.bde_eseo.lacommande.admin.PlanningActivity"
            android:label="@string/activity_admin_plannings"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme" >
        </activity>

        <activity
            android:name="fr.bde_eseo.lacommande.ClientListActivity"
            android:label="@string/activity_clients"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme" >
        </activity>

        <activity
            android:name="fr.bde_eseo.lacommande.OrderGenericActivity"
            android:label="@string/activity_order"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>
