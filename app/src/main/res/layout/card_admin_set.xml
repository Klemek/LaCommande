<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="4dp"
    android:layout_marginTop="14dp"
    android:layout_marginLeft="64dp"
    android:layout_marginRight="64dp"
    android:layout_marginBottom="0dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardPreventCornerOverlap="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:id="@+id/relativeLayout">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rect_rounded"
                android:id="@+id/view" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:src="@drawable/ic_club_set"
                android:id="@+id/adminIcon"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/relativeLayout"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/adminTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/orange_normal"
                android:text="Comptes clubs"
                android:layout_marginStart="18dp" />

            <TextView
                android:id="@+id/adminDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajoutez, modifiez les logins et mots de passe ou supprimez les comptes des clubs qui ont accès à la commande caféteria"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="4dp"/>


        </LinearLayout>




    </RelativeLayout>

</android.support.v7.widget.CardView>